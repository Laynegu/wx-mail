.goods_detail .good_pic {
  height: 70vw;
  text-align: center;
}
.goods_detail .good_pic image {
  width: 70vw;
}
.good_mesg .good_price {
  color: red;
  font-size: 32rpx;
  font-weight: 600;
  padding: 10rpx 20rpx;
}
.good_mesg .good_name_wrap {
  display: flex;
  color: #888888;
  padding-bottom: 10rpx;
}
.good_mesg .good_name_wrap .good_name {
  flex: 5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
  padding-left: 15rpx;
  padding-right: 25rpx;
}
.good_mesg .good_name_wrap .goods_collection {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 5rpx solid #dddddd;
}
.good_intro {
  padding-bottom: 90rpx;
  border-top: 15rpx solid #eeeeee;
}
.good_intro .title {
  color: red;
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx;
}
.tool_bottom {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid #cccccc;
  background-color: #ffffff;
}
.tool_bottom .btn_sma {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
}
.tool_bottom .btn {
  flex: 2;
  line-height: 90rpx;
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
}
.tool_bottom .add_cart {
  background-color: #FFA500;
}
.tool_bottom .buy {
  background-color: #EB4450;
}
.tool_bottom .contact button,
.tool_bottom .share button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
